<% unless post.comments.empty? %>
  <ul>
    <% post.comments.each do |comment| %>
      <li>
        <p id="comment">
          <%= link_to comment.user.name.titleize, user_path(comment.user) %>
          <%= comment.body %>
        </p>

        <% if comment.created_by_user?(current_user) %>
          <p id="delete-comment"><%= link_to "Delete comment", comment_path(comment), method: "delete" %></p>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
