<h1>Users:</h1>
<% @users.each do |user| %>
  <p>
    <%= link_to user.name.titleize, user_path(user) %>,
    <% unless user.is_my_friend?(current_user) || user.pending_request?(current_user) || user == current_user %>
      <%= link_to 'Send friend request', friend_requests_path(user_id: user.id), method: "post" %> 
    <% end %>
  </p>
<% end %>
